@model myClass.Model.Categories

@{
    ViewBag.Title = "Xác nhận xoa dữ liệ ";
    Layout = "~/Areas/admin/Views/Shared/_Layoutadmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÁC NHẬN XÓA DỮ LIỆU</strong>
                            </div>

                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Index", "Category")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Partial("Message")

                        <table id="table table-">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                    <th>@Html.DisplayNameFor(model => model.Parentld)</th>
                                    <th>@Html.DisplayNameFor(model => model.Order)</th>
                                    <td>@Html.DisplayFor(model => model.MetaDess)</td>
                                    <td>@Html.DisplayFor(model => model.MetaKey)</td>
                                    <th>Xác nhận</th>

                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td>@Html.DisplayFor(model => model.Slug)</td>
                                    <td>@Html.DisplayFor(model => model.Parentld)</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <td>@Html.DisplayFor(model => model.MetaDess)</td>
                                    <td>@Html.DisplayFor(model => model.MetaKey)</td>
                                    <td>
                                        <div class="form-actions no-color">
                                            <button class="btn-sm btn-default"input type="submit" name="Delete" > xóa [Del] <i class="fa fa-trash"></i></button>

                                        </div>
                                    </td>

                                </tr>

                            </tbody>
                        </table>

                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
}
  
